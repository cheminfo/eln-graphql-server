{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "strictFunctionTypes": false // See https://github.com/apollographql/graphql-tools/issues/704
  },
  "include": ["src/**/*"]
}
