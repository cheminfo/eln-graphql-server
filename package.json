{
  "private": true,
  "name": "eln-graphql-server",
  "version": "1.0.0",
  "description": "GraphQL server for ELN data",
  "scripts": {
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "start": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js | bunyan"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/eln-graphql-server.git"
  },
  "bugs": {
    "url": "https://github.com/cheminfo/eln-graphql-server/issues"
  },
  "homepage": "https://github.com/cheminfo/eln-graphql-server#readme",
  "dependencies": {
    "@types/graphql": "^14.0.3",
    "apollo-server-koa": "^2.0.0-rc.12",
    "bunyan": "^1.8.12",
    "graphql": "^14.0.2",
    "koa": "^2.6.2",
    "koa-bunyan-logger": "^2.1.0",
    "make-promises-safe": "^3.0.0",
    "rest-on-couch": "^6.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/koa-bunyan-logger": "^2.0.0",
    "@types/node": "^10.12.3",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.0.1",
    "nodemon": "^1.18.6",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  }
}
